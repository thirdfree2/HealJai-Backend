<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Psyconist</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="container" style="margin-top: 50px;">
    <%- include('../layout/nav') %>
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-link">
                    <h1>
                        Psychonist
                    </h1>
                </li>
                <li class="nav-link ml-auto mt-2">
                    <a href="/admin/add" class="nav-link active">Add Psychonist</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="200px">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < data.length; i++) {%>
                            <tr>
                                <th scope="row">
                                    <%= (i+1) %>
                                </th>
                                <td>
                                    <%= data[i].user_name %>
                                </td>
                                <td>
                                    <%= data[i].user_email %>
                                </td>
                                <td>
                                    <a href="../books/edit/<%= data[i].id %>" class="btn btn-success edit">edit</a>
                                    <a href="../books/delete/<%= data[i].id %>" onclick="return alert('Are you sure?')"
                                        class="btn btn-success btn-danger">delete</a>
                                </td>
                            </tr>
                            <% }%>
                    </tbody>
                </table>
                <% } %>
                    <% if(!data.length) { %>
                        <p class="text-center">No psychonist</p>
                        <% } %>
        </div>
    </div>
</body>
</html>